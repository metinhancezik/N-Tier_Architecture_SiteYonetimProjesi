@model EntityLayer.Concrete.User
@{
    ViewData["Title"] = "userDuzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>User Duzenleme Kısmına Hoş Geldiniz</h1>

<br />
    <div class="justify-content-center p-5">



    @using (Html.BeginForm("userDuzenle", "UserIslemleri", FormMethod.Post))
    {

            <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Kullanıcı Adı</label>
            @Html.TextBoxFor(x=>x.userName, new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.userName,"", new{@class="text-danger"})
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Şifre</label>
            @Html.TextBoxFor(x=>x.userPassword, new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.userPassword,"", new{@class="text-danger"})
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Phone</label>
            @Html.TextBoxFor(x=>x.phone, new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.phone,"", new{@class="text-danger"})
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label"> E-mail</label>
            @Html.TextBoxFor(x=>x.email, new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.email,"", new{@class="text-danger"})
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Rolü </label>
            @Html.DropDownListFor(x => x.role, (List<SelectListItem>)ViewBag.siteIdListesi, "Site Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(x=>x.role,"", new{@class="text-danger"})
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Yönetici ID</label>
            @Html.TextBoxFor(x=>x.YoneticiID, new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.YoneticiID,"", new{@class="text-danger"})
                </div>
            <div class="mb-3">
            @Html.HiddenFor(x => x.UserID)
            </div>

                <button type="submit" class="btn btn-primary" id="SiteKaydetButton">Kaydet</button>

    }

        </div>