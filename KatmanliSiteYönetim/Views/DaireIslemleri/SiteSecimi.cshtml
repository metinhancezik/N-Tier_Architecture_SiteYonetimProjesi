
@{
    ViewData["Title"] = "SiteSecimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>Site Ekleme Paneline Hoş Geldiniz</h1>
<br />

@using (Html.BeginForm("SecilenSite", "DaireIslemleri", FormMethod.Post))
{
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Site Seçiniz</label>
        @Html.DropDownList("SiteID", ViewBag.SiteListesi as SelectList, "-- Site Seçin --", new { @class = "form-control" })

    </div>

    <button type="submit" class="btn btn-primary" id="DaireKaydetButton">Kaydet</button>
}
